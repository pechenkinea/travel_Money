<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_item_layout"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutCostItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/sum_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:gravity="top"
                android:text="Member"
                style="@style/normal"/>

            <TextView
                android:id="@+id/sum_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-->"
                style="@style/normal" />

            <TextView
                android:id="@+id/sum_to_member"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="To_member"
                style="@style/normal" />

            <TextView
                android:id="@+id/sum_sum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Sum"
                style="@style/normal" />
        </LinearLayout>


        <!-- Rightend Duration -->


        <TextView
            android:id="@+id/sum_comment"
            style="@style/litle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="5dp"
            android:id="@+id/costSeparator"
            android:background="#cccbcb"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="end"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            style="@style/h2" />

        <ImageView
            android:id="@+id/sum_havefoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginBottom="5dp"
            android:src="@android:drawable/ic_menu_camera"
            android:visibility="visible"
            tools:ignore="ContentDescription" />



    </FrameLayout>


</RelativeLayout>