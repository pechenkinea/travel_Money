<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_item_layout_one_line">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/sum_title"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:gravity="top"
                tools:text="Member" />

            <TextView
                android:id="@+id/sum_line"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="-->" />

            <TextView
                android:id="@+id/to_member"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                tools:text="To_member" />

            <TextView
                android:id="@+id/sum_sum"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="Sum" />

        <!-- Rightend Duration -->


        <TextView
            android:id="@+id/sum_comment"
            style="@style/litle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelHeader"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            tools:text="1234567890"
            tools:visibility="visible"/>

        <ImageView
            android:id="@+id/sum_havefoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_camera_24"
            android:background="@null"
            android:visibility="visible"
            tools:ignore="ContentDescription,RtlHardcoded" />


    </FrameLayout>


</RelativeLayout>