<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout style="@style/list_item_layout">

        <ImageButton
            android:id="@+id/lm_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@string/check"
            android:gravity="center_vertical"
            app:srcCompat="@drawable/ic_check_on_24" />

        <TextView
            android:id="@+id/lm_name"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:gravity="center_vertical"
            tools:text="Text"/>

        <ImageButton
            android:id="@+id/listViewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:background="@drawable/edit_button_background"
            android:contentDescription="@string/edit"
            app:srcCompat="@drawable/ic_view_24"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/memberSumText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:gravity="center_vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            tools:text="1234.54"/>


        <ImageButton
            android:id="@+id/listEditButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:background="@drawable/edit_button_background"
            android:contentDescription="@string/edit"
            app:srcCompat="@drawable/ic_edit_24"
            android:visibility="invisible"
            tools:visibility="visible"/>

    </RelativeLayout>

</RelativeLayout>