<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:descendantFocusability="blocksDescendants"
    android:paddingStart="16dp"
    android:paddingEnd="4dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lm_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:clickable="false"
            android:contentDescription="@string/check"
            android:paddingStart="0dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="12dp"
            app:srcCompat="@drawable/ic_check_on_24" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:scaleType="center"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_human_male_20x7"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/lm_name"
            style="@style/normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:gravity="center_vertical"
            tools:text="Text" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/updateProject"
        style="@style/listImageButton"
        android:layout_marginEnd="100dp"
        android:contentDescription="@string/edit"
        android:padding="12dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_cloud_download_24"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/listViewButton"
        style="@style/listImageButton"
        android:layout_marginEnd="50dp"
        android:contentDescription="@string/edit"
        android:padding="12dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_view_24"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/memberSumText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="56dp"
        android:gravity="center_vertical"
        android:visibility="invisible"
        tools:text="1234.54"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/listEditButton"
        style="@style/listImageButton"
        android:contentDescription="@string/edit"
        android:padding="12dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_edit_24"
        tools:visibility="visible" />


</FrameLayout>