<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Layout">


    <ListView
        android:id="@+id/main_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/helpHintAddMembers"
            android:layout_gravity="top|end"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:text="@string/helpAddMembers"
            style="@style/help"
            />

        <TextView
            android:id="@+id/helpHintAddCost"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="30dp"
            android:text="@string/helpAddCost"
            style="@style/help"
            />



        <TextView
            android:id="@+id/helpHintAddCostVoice"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="120dp"
            android:text="@string/helpAddCostVoice"
            style="@style/help"
            />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainPageSpeechRecognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="88dp"
            app:srcCompat="@drawable/ic_mic_24"
            android:alpha="0.85"
            tools:ignore="RtlHardcoded" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainPageAddbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_plus_24"
            android:alpha="0.85"
            tools:ignore="RtlHardcoded" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainPageRevertButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_reply_24"
            android:visibility="invisible"
            android:alpha="0.85"
            tools:ignore="RtlHardcoded" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainPageListToTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_up_24"
            android:alpha="0.85"
            tools:ignore="RtlHardcoded" />

    </FrameLayout>




    

</RelativeLayout>
