<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_main_layout_list_view"
        android:minHeight="48dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/sum_title"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="5"
                android:gravity="top"
                tools:text="Евгений" />

            <TextView
                android:id="@+id/sum_line"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                tools:text="-->" />

            <LinearLayout
                android:id="@+id/member_icons_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                android:orientation="horizontal"
                tools:visibility="visible">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-8dp"
                    android:layout_marginEnd="-8dp"
                    app:srcCompat="@drawable/ic_human_male_24"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/to_member_one"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:visibility="gone"

                tools:text="Вася"
                tools:visibility="gone" />


            <TextView
                android:id="@+id/sum_group_sum"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                tools:text="1234.56 ₽" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/more_information_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:ignore="RtlSymmetry"
            tools:visibility="visible">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7" />

            <TextView
                android:id="@+id/to_member"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"

                tools:text="Вася" />

            <TextView
                android:id="@+id/sum_sum"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                tools:text="1234.56" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sum_comment"
                style="@style/litle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                tools:text="24.07.2019 18:16  Магазин" />

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="#cccbcb" />
        <!-- Rightend Duration -->


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/labelHeader"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sum_havefoto"
            style="@style/listImageButton"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_camera_24"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />


    </FrameLayout>


</RelativeLayout>