<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="vertical"
        android:paddingTop="12dp"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/sum_title"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:gravity="top"
                tools:text="Member" />

            <TextView
                android:id="@+id/sum_line"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="-->" />

            <TextView
                android:id="@+id/to_member"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                tools:text="To_member" />

            <TextView
                android:id="@+id/sum_sum"
                style="@style/normal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                tools:text="Sum" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sum_comment"
                style="@style/litle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                tools:text="sum_comment" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <View
                    android:id="@+id/sumSeparator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_gravity="end"
                    android:layout_marginTop="1dp"
                    android:background="#cccbcb" />

                <TextView
                    android:id="@+id/sum_group_sum"
                    style="@style/normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="group_sum" />

            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_gravity="end"
            android:layout_marginTop="12dp"
            android:background="#cccbcb" />
        <!-- Rightend Duration -->


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <TextView
            android:id="@+id/labelHeader"
            style="@style/h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            tools:text="1234567890"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/sum_havefoto"
            style="@style/listImageButton"
            android:visibility="visible"
            app:srcCompat="@drawable/ic_camera_24"
            tools:ignore="ContentDescription" />


    </FrameLayout>


</RelativeLayout>