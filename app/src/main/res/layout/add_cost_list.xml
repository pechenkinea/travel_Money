<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/add_costs_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:hint="@string/text"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:singleLine="true"
            tools:ignore="Autofill" />


        <EditText
            android:id="@+id/add_cost_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="@string/Description"
            android:imeOptions="actionDone"
            android:inputType="textPersonName|textCapSentences"
            android:singleLine="true"
            tools:ignore="Autofill">

        </EditText>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_add_costs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="none"
            android:scrollbars="vertical" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_costs_list_refresh_button"
            style="@style/secondFab"
            android:visibility="invisible"
            app:srcCompat="@drawable/ic_refresh_24"
            tools:visibility="visible" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_cost_list_commit"
            style="@style/firstFab"
            app:srcCompat="@drawable/ic_done_24" />


    </FrameLayout>

</RelativeLayout>
