<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->


	<style name="list_item_layout">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">@drawable/background_normal_item</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:textColor">#000000</item>
	</style>

	<style name="button">

		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>

	</style>
	<style name="roundButton" parent="button">
		<item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textAlignment">center</item>
		<item name="android:layout_width">70dp</item>
		<item name="android:layout_height">70dp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_marginBottom">10dp</item>
		<item name="android:layout_marginEnd">10dp</item>

	</style>

	<style name="blueButton" parent="button">
		<item name="android:background">@drawable/blue_button</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="commitButton" parent="roundButton">
		<item name="android:background">@drawable/round_button</item>
		<item name="android:layout_gravity">bottom|right</item>
        <item name="android:text">✓</item>
	</style>

	<style name="addButton" parent="commitButton">
		<item name="android:text">✚</item>
	</style>

	<style name="help">
		<item name="android:textColor">#9ac1e6</item>
		<item name="android:textSize">19sp</item>
		<item name="android:visibility">invisible</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>


	<style name="h1">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">21sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:padding">5dp</item>
	</style>
	<style name="h2" parent="h1">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="h3" parent="h1">
		<item name="android:textSize">15sp</item>
	</style>

	<style name="litle">
        <item name="android:textColor">#000000</item>
		<item name="android:textSize">10sp</item>
	</style>


	<style name="normal">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">15sp</item>
	</style>


    <style name="textEdit">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


	<style name = "Layout">
	    <item name="android:layout_height">match_parent</item>
	    <item name="android:orientation">vertical</item>
	    <item name="android:background">#ffffff</item>
    </style>


	<style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
	</style>
	<style name="AppTheme" parent="AppTheme.Base">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primaryDark</item>
		<item name="android:colorAccent">@color/accent</item>
	</style>
	


</resources>
