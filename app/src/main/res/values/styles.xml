<resources>

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>


	<style name="listImageButton">

		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/edit_button_background</item>
		<item name="android:layout_gravity">right|center_vertical</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>

	</style>


	<style name="fab">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">bottom|right</item>
		<item name="android:alpha">0.85</item>
	</style>

	<style name="firstFab" parent="fab">
		<item name="android:layout_margin">16dp</item>
	</style>

	<style name="leftFirstFab" parent="fab">
		<item name="android:layout_margin">16dp</item>
		<item name="android:layout_gravity">bottom|left</item>
	</style>

	<style name="secondFab" parent="fab">
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginBottom">88dp</item>
	</style>

	<style name="thirdFab" parent="fab">
		<item name="android:layout_marginTop">16dp</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginBottom">160dp</item>
	</style>


	<style name="h1">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="h2" parent="h1">
		<item name="android:textSize">18sp</item>
	</style>
	<style name="h3" parent="h1">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="lite">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">12sp</item>
	</style>


	<style name="normal">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">16sp</item>
	</style>


</resources>
